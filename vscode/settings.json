{
  // git
  "git.openRepositoryInParentFolders": "never",

  // cmake
  "cmake.showOptionsMovedNotification": false,
  "cmake.automaticReconfigure": false,
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  "cmake.enableAutomaticKitScan": false,
  "cmake.parseBuildDiagnostics": false,
  "cmake.saveBeforeBuild": false,
  "cmake.showNotAllDocumentsSavedQuestion": false,
  "cmake.showSystemKits": false,
  "cmake.useCMakePresets": "never",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],

  // editor
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#f4dbd6",
    "terminalCursor.foreground": "#f4dbd6"
  },
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.activityBar.location": "hidden",
  "editor.fontFamily": "\"Cascadia Mono\"",
  "editor.fontSize": 16,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "solid",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // terminal
  "terminal.integrated.defaultProfile.linux": "fish",

  // animations
  "animations.Enabled": true,
  "vscode_custom_css.imports": [
    "",
    "file:///c:/Users/lmh22/scoop/apps/vscode/1.96.2/data/extensions/brandonkirbyson.vscode-animations-2.0.4/dist/updateHandler.js"
  ],
  "animations.CursorAnimationOptions": {
    "TrailLength": 8
  },
  "animations.CursorAnimation": true,

  // others
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "todohighlight.keywords": [
    {
      "text": "FIX:",
      "color": "black",
      "backgroundColor": "yellow"
    },
    {
      "text": "NOTE:",
      "color": "black",
      "backgroundColor": "#33ff86"
    },
    {
      "text": "TODO:",
      "color": "black",
      "backgroundColor": "#0db9d7"
    },
    {
      "text": "WARNING:",
      "color": "black",
      "backgroundColor": "#ffc777"
    },
    {
      "text": "PERF:",
      "color": "black",
      "backgroundColor": "#c099ff"
    },
    {
      "text": "HACK:",
      "color": "black",
      "backgroundColor": "#ffc777"
    },
    {
      "text": "NEXT:",
      "color": "black",
      "backgroundColor": "#8aadf4"
    }
  ]
}

